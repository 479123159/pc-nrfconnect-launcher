{
    "name": "nrfconnect",
    "version": "2.0.0-pre0",
    "description": "nRF Connect for PC",
    "repository": {
        "type": "git",
        "url": "https://github.com/NordicSemiconductor/pc-nrfconnect-core.git"
    },
    "main": "index.js",
    "scripts": {
        "start": "echo 'please run `npm run dev` in one tab and then `npm run app` in another one'",
        "app": "electron .",
        "dev": "webpack --watch",
        "webpack": "webpack",
        "build": "cross-env NODE_ENV=production webpack",
        "lint": "eslint main lib",
        "test": "jest --testResultsProcessor jest-bamboo-formatter",
        "test-watch": "jest --watch",
        "test-e2e": "xvfb-maybe jest --runInBand --config test/setup/jest-e2e.json",
        "clean": "npm install rimraf && npm run clean-dist && npm run clean-modules",
        "clean-dist": "rimraf dist",
        "clean-modules": "rimraf \"node_modules/!(rimraf|.bin)\"",
        "get-nrfjprog": "node build/get-nrfjprog.js",
        "pack": "npm run build && npm run get-nrfjprog && build"
    },
    "author": "Nordic Semiconductor ASA",
    "license": "Proprietary",
    "build": {
        "appId": "com.nordicsemi.nrfconnect",
        "productName": "nRF Connect",
        "files": [
            "dist/",
            "main/",
            "node_modules/",
            "resources/*.html",
            "resources/*.png",
            "index.js"
        ],
        "directories": {
            "output": "release"
        },
        "linux": {
            "target": [
                "tar.gz"
            ],
            "extraFiles": [
                { "from": "build/nrfjprog/unpacked/nrfjprog", "to": ".", "filter": "*.so*" }
            ]
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "extraFiles": [
                { "from": "build/nrfjprog/unpacked/nrfjprog", "to": "Frameworks", "filter": "*.dylib" }
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": false,
            "menuCategory": "Nordic Semiconductor",
            "include": "build/installer.nsh"
        }
    },
    "devDependencies": {
        "asar": "0.13.0",
        "electron-builder": "17.0.3",
        "pc-nrfconnect-devdep": "https://github.com/NordicSemiconductor/pc-nrfconnect-devdep.git",
        "electron": "1.4.13",
        "spectron": "3.6.0",
        "tar": "2.2.1",
        "util": "0.10.3",
        "xvfb-maybe": "0.1.3"
    },
    "dependencies": {
        "babel-polyfill": "6.22.0",
        "bootstrap": "3.3.7",
        "immutable": "3.8.1",
        "moment": "2.17.1",
        "mousetrap": "1.6.0",
        "pc-ble-driver-js": "https://github.com/NordicSemiconductor/pc-ble-driver-js.git#v1.0.0",
        "pc-nrfjprog-js": "https://github.com/NordicSemiconductor/pc-nrfjprog-js.git#a742bade",
        "react": "15.4.2",
        "react-bootstrap": "0.30.7",
        "react-dom": "15.4.2",
        "react-infinite": "NordicSemiconductor/react-infinite#998e3a5",
        "react-redux": "5.0.2",
        "redux": "3.6.0",
        "redux-logger": "2.8.0",
        "redux-thunk": "2.2.0",
        "serialport": "4.0.7",
        "winston": "2.3.1",
        "yargs": "7.0.2",
        "yarn": "0.21.3"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/mocks/fileMock.js",
            "\\.(css|less)$": "<rootDir>/mocks/styleMock.js"
        }
    }
}
